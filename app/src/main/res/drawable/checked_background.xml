<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@color/white" android:id="@+id/checked1"/>
    <item android:state_checked="false" android:drawable="@color/main" android:id="@+id/normal"/>
    <transition
        android:fromId="@id/normal"
        android:toId="@id/checked1"
        android:drawable="@color/white">
        <animation-list>
            <item android:duration="1" android:drawable="@color/main"/>
            <item android:duration="30" android:drawable="@color/white"/>
        </animation-list>
    </transition>
</animated-selector>
